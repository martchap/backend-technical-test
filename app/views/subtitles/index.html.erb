<p id="notice"><%= notice %></p>

<h1>Subtitles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Filename</th>
          <th scope="col">View</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <% @subtitles.each do |subtitle| %>
          <tbody>
            <tr>
              <th scope="row"><%= subtitle.id %></th>
              <td><%= subtitle.filename %></td>
              <td><%= link_to "View", subtitle %></td>
              <td><%= link_to "Edit", edit_subtitle_path(subtitle) %></td>
              <td><%= link_to 'Destroy', subtitle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
      <% end %>
    </table>
  </tbody>
</table>

<br>

<%= button_to 'New Subtitle', new_subtitle_path, method: :get, class: "btn btn-primary" %>